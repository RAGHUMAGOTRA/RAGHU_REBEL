<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login"
    tools:context="com.example.admin.vibring.addedlocations.ViewLocActivity">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationlist"
            android:layout_marginBottom="40dp">

        </ListView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/locationlist"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnselectalllist"
            android:text="SELECT ALL"
            android:background="#c6321f"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/btnDeletelist" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:background="#c6321f"
            android:textStyle="bold"
            android:id="@+id/btnDeletelist"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btnselectalllist"
            android:layout_toEndOf="@+id/btnselectalllist"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncancelloc"
            android:background="#c6321f"
            android:textStyle="bold"
            android:text="CANCEL"
            android:layout_alignTop="@+id/btnDeletelist"
            android:layout_toRightOf="@+id/btnDeletelist"
            android:layout_toEndOf="@+id/btnDeletelist"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />


    </RelativeLayout>

</FrameLayout>
