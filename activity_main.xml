<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ll"
    tools:context="com.example.admin.vibring.mainscreen.MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOME SCREEN"
        android:textColor="#FF0000"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnviewlocation"
        android:layout_margin="30dp"
        android:layout_weight="2"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="VIEW ADDED LOCATIONS"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW CURRENT LOCATION"
        android:id="@+id/btnsearchmap"
        android:layout_weight="2"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="@android:color/transparent"
        android:layout_margin="30dp"
        />

    />
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/activate"
      android:layout_weight="2"
      android:textStyle="bold"
      android:textSize="15sp"
      android:textColor="#ffffff"
      android:background="@android:color/transparent"
      android:layout_margin="30dp"

      android:text="ACTIVATE AuToggle"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH GOOGLE MAP"
        android:layout_weight="2"
        android:id="@+id/btnaddlocation"
        android:background="@android:color/transparent"
        android:layout_margin="30dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />

    <Button
        android:id="@+id/btnabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT APP"
        android:background="@android:color/transparent"
        android:layout_weight="2"
        android:textSize="15sp"
        android:layout_margin="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

 </LinearLayout>
</ScrollView>

</LinearLayout>



