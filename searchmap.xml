            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_marginBottom="0dp"-->
            <!--android:text="Current Location" />-->
    </RelativeLayout>

</FrameLayout>