<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"



    tools:context="com.example.admin.vibring.googlemaps.LocationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ADD LOCATION"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/edtLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
        android:layout_weight="2"
        android:inputType="textPersonName"
        android:hint="LocationName" />

    <TextView
        android:id="@+id/edtLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="Longitute"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/edtLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_weight="2"
        android:inputType="textPersonName"
        android:hint="Latitude" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnaddlocation"
        android:layout_weight="2"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:background="#f4eeee"
        android:layout_height="wrap_content"
        android:text="AddLocation" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_weight="2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#f4eeee"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel" />
    </LinearLayout>


</ScrollView>
